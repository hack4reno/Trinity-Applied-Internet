<% content_for :header do -%>
	<h1>Free your events!<small>An event aggregator to answer the question, what is happening HERE?</small></h1>
<% end -%>
<% content_for :sidebar do -%>
<h2>What?</h2>
<ul class="categories filter">
	<% @categories.each do |c| -%>
	<li><%= check_box_tag 'Categories', :checked => 'checked' %><%= link_to c.name, :title => c.description, :name => 'name' %></li>
	<% end -%>
</ul>
<h2>When?</h2>
<ul class="last-list filter">
	<li><input type="radio" name="when" value="<%= Date.today %>" checked="checked" />Today</li>
	<li><input type="radio" name="when" value="<%= Date.today+1.day %>" />Tomorrow</li>
	<li><input type="radio" name="when" value="<%= Date.today.end_of_week %>" />This Week</li>
	<li><input type="radio" name="when" value="<%= (Date.today+1.day).end_of_week %>" />Next Week</li>
	<li><input type="radio" name="when" value="<%= Date.today.end_of_month %>" />This Month</li>
	<li><input type="radio" name="when" value="<%= (Date.today+30.days).end_of_month %>" />Next Month</li>
</ul>
<% end -%>

<!-- 
<%= @events %>
-->

<div>
<%= gmaps({
"map_options" => { "zoom" => 16, "auto_adjust" => false },
"markers" => { "data" => @events }
}) %>
</div>
