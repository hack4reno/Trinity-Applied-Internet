<% content_for :header do -%>
<h1>Sign Up</h1>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <p style="text-align: center;"><%= link_to "Sign Up with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => 'btn large primary' %></p>
  <% end -%>

	<h2 style="text-align: center;">&mdash; OR &mdash;</h2>
<% end -%>



<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<fieldset>
  <div class="clearfix">
		<%= f.label :email %>
		<div class="input">
  		<%= f.email_field :email %>
		</div>
	</div>

  <div class="clearfix">
		<%= f.label :password %>
		<div class="input">
  		<%= f.password_field :password %>
		</div>
	</div>

  <div class="clearfix">
		<%= f.label :password_confirmation %>
		<div class="input">
  		<%= f.password_field :password_confirmation %>
		</div>
	</div>

	<div class="actions">
		<%= f.submit "Sign Up", :class => 'btn primary' %>
		<button class="btn" type="reset">Cancel</button>
	</div>
		
</fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>
